<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mybook.SearchActivity"
    tools:ignore="MergeRootFrame" > 
  
    <Button
        android:id="@+id/searchActivity_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Scanner"
        android:width="150dp" /> 
  
    <Button
        android:id="@+id/searchActivity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchActivity_scanner"
        android:layout_below="@+id/searchActivity_scanner"
        android:layout_marginTop="130dp"
        android:text="Suchen"
        android:width="150dp" /> 
  
    <EditText
        android:id="@+id/searchActivity_input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchActivity_scanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:width="300dp" > 
  
        <requestFocus /> 
    </EditText> 
  
</RelativeLayout>